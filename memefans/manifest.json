{
  "manifest_version": 3,
  "name": "MemeFans",
  "version": "1.0",
  "description": "MemeFans Chrome Extension",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://api.twitter.com/*",
    "https://solana-api.projectserum.com/*",
    "https://special-fluent-dust.solana-mainnet.quiknode.pro/*",
    "https://api.devnet.solana.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [{
    "resources": [
      "lib/buffer.js",
      "lib/solana-web3.js",
      "lib/bs58.js",
      "lib/solana-init.js",
      "init.js",
      "popup.js",
      "calculation.js",
      "airdrop.js"
    ],
    "matches": ["<all_urls>"]
  }]
}